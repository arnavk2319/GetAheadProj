<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/drop_down_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myrect2"
    android:elevation="15dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/expandedDetailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myrect2"
        android:clickable="true"
        android:focusable="true"
        android:text="cost_info_title"
        android:drawableEnd="@drawable/up_arrow_spinner"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:textSize="20sp"
        android:elevation="15dp"
        android:paddingBottom="15dp" />

    <TableLayout
        android:id="@+id/cost_info_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:elevation="15dp"
        android:background="@drawable/myrect2"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TableRow>
            <TextView
                android:text=""
                android:padding="3dp"/>
            <TextView
                android:id="@+id/retailPrice1"
                android:text="retail_price"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/invoicePrice1"
                android:text="invoice_price"
                android:padding="3dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/baseInfo1"
                android:text="Base_info"
                android:padding="2dp"/>
            <TextView
                android:text="$$$$"
                android:padding="2dp"/>
            <TextView
                android:text="$$$$"
                android:padding="2dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/freightInfo1"
                android:text="Freight_info"
                android:padding="2dp"/>
            <TextView
                android:text="$$$$"
                android:padding="2dp"/>
            <TextView
                android:text="$$$$"
                android:padding="2dp"/>
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/options_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="options_info_title"
        android:elevation="15dp"
        android:textSize="20sp"
        android:background="@drawable/myrect2"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>

    <TableLayout
        android:id="@+id/options_info_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:elevation="15dp"
        android:background="@drawable/myrect2"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TableRow>
            <TextView
                android:text=""
                android:padding="3dp"/>
            <TextView
                android:id="@+id/retailPrice2"
                android:text="retail_price"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/invoicePrice2"
                android:text="invoice_price"
                android:padding="3dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/baseInfo2"
                android:text="Base_info"
                android:padding="2dp"/>
            <TextView
                android:text="$$$$"
                android:padding="2dp"/>
            <TextView
                android:text="$$$$"
                android:padding="2dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/freightInfo2"
                android:text="Freight_info"
                android:padding="2dp"/>
            <TextView
                android:text="$$$$"
                android:padding="2dp"/>
            <TextView
                android:text="$$$$"
                android:padding="2dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/totalTextView"
                android:text="Total"
                android:textSize="18sp"
                android:padding="2dp"
                android:textStyle="bold"/>
            <TextView
                android:text="$$$$"
                android:padding="2dp"/>
            <TextView
                android:text="$$$$"
                android:padding="2dp"/>
        </TableRow>

    </TableLayout>

</LinearLayout>

